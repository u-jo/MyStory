<% if signed_in? %>
<div class="row">
  <aside class="span4">
    <section>
      <%= render 'shared/user_info' %>
    </section>
    <section>
      <%= render 'shared/micropost_form' %>
    </section>
  </aside>

  <div class="span8">
    <h3>My Scribbles</h3>
    <%= render 'shared/feed' %>
  </div>
</div>

<% else %>
<div class="splash_page">
  <div class="splash_image">
    <%= image_tag("splashpage.png", {:alt => "What is your story?", :id => "splash_image"}) %>
  </div>
  <div class="center hero-unit welcome">
    <h1>Everyone has a story to tell</h1>

    <h2>
      What is your story?
    </h2>

    <%= link_to "Sign up now!", signup_path,
    class: "btn btn-large btn-primary" %>
  </div>

  

  <div class="container">
    <div class="row center ">
      <div class="span12 introduction">
      <header>
        <h1>What is MyStory?</h1>
      </header>
      <h2>
        MyStory is a platform for you to remember how you lived your life and gain some introspection on how the choices you make in your everyday life.
      </h2>
      </div>
    </div>
  </div>

</div>
<% end %>
